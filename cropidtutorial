<script>
function zoomin(){
    $("#area0").removeClass("col-xs-6");
    $("#image_area").removeClass("col-xs-6");
    $("#area0").addClass("col-xs-12");
    $("#image_area").addClass("col-xs-12");
}

function zoomout() {
    $("#area0").removeClass("col-xs-12");
    $("#image_area").removeClass("col-xs-12");
    $("#area0").addClass("col-xs-6");
    $("#image_area").addClass("col-xs-6");
}

var current= $("#step_0");

function load_tutorial_step(number) {
			$(".steps").hide();
			if(number>0)
			 $("#prevBtn").show();
			$("#step_"+number).show();
			current= $("#step_"+number);
			
			// PAGINATION
          
			var pag_max_steps = $(".steps").length;
			var pag_n_steps = $(".steps").index($(".steps:visible"));
			var pag_perc=(((pag_n_steps+1)/(pag_max_steps-1))*100).toFixed(0);
			$("#progress_bar_task").css("width",pag_perc+"%");
			$("#progress_bar_task").html(pag_perc+"%");

			// PAGINATION
			
			
		}

 

        // Hide all steps first 
        $(".steps").hide();
        //$("#image_area").hide();
        // Show first step
        $("#step_0").show();



		
		$('#prevBtn').click(function(evt) {
		
		// PAGINATION
          
			var pag_max_steps = $(".steps").length;
			var pag_n_steps = $(".steps").index($(".steps:visible"));
			var pag_perc=(((pag_n_steps+1)/(pag_max_steps-1))*100).toFixed(0);
			$("#progress_bar_task").css("width",pag_perc+"%");
			$("#progress_bar_task").html(pag_perc+"%");

			// PAGINATION
			
			   if ($(current).is('#step_0')) {
               $("#prevBtn").show();
                }
				else if ($(current).is('#step_1')) {
                $(".steps").hide();
                $("#step_0").show();
				current= $("#step_0");
				
				}
				else if ($(current).is('#step_2')) {
                $(".steps").hide();
                $("#step_1").show();
				current= $("#step_1");
				}
				else if ($(current).is('#step_3')) {
                $(".steps").hide();
                $("#step_2").show();
				current= $("#step_2");
				}
				else if ($(current).is('#step_4')) {
                $(".steps").hide();
                $("#step_3").show();
				current= $("#step_3");
				}
				else if ($(current).is('#step_5')) {
                $(".steps").hide();
                $("#step_4").show();
				$("#nextBtn").show();
				current= $("#step_4");
				}
			
				
             
		});

</script>
